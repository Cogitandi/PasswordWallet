@model BSI_PasswordWallet.Infrastructure.Commands.ShowDecryptedPasswords.ShowDecryptedPasswordsCommand

@{
    ViewData["Title"] = "Decrypt Passwords";
    string message = TempData["message"]?.ToString();
}

@if (message != null)
{
    <partial name="_StatusMessage" model="message" />
}

<h1>Decrypt Password</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DecryptPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Decrypt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

